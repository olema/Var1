@page
@model Var1.Pages.Pacients.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>

<h4>Пациент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pacient.PacientID" />
            <div class="form-group">
                <label asp-for="Pacient.FirstName" class="control-label"></label>
                <input asp-for="Pacient.FirstName" class="form-control" />
                <span asp-validation-for="Pacient.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.LastName" class="control-label"></label>
                <input asp-for="Pacient.LastName" class="form-control" />
                <span asp-validation-for="Pacient.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.MedPol" class="control-label"></label>
                <input asp-for="Pacient.MedPol" class="form-control" />
                <span asp-validation-for="Pacient.MedPol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохр" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">В список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
