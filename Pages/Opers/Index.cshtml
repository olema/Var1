@page
@model Var1.Pages.Opers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Oper[0].OperName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Oper) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OperName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OperID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OperID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OperID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
